<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#89CFF3"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rental PS Thanos"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#00A9FF"
        android:padding="15dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type : "
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingBottom="20dp"/>

            <RadioGroup
                android:orientation="horizontal"
                android:layout_height="50dp"
                >

                <RadioButton
                    android:id="@+id/PS5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PS5" />

                <RadioButton
                    android:id="@+id/PS4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PS4" />

                <RadioButton
                    android:id="@+id/PS3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PS3" />

                <RadioButton
                    android:id="@+id/PSVR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PSVR" />

            </RadioGroup>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambahan : "
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingBottom="20dp"/>

            <RadioGroup
                android:orientation="horizontal"
                android:layout_height="50dp"
                >

                <RadioButton
                    android:id="@+id/indomie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Indomie" />

                <RadioButton
                    android:id="@+id/mieAyam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mie Ayam" />

                <RadioButton
                    android:id="@+id/siomay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Siomay" />

            </RadioGroup>

        </TableLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWaktu"
                android:text=""
                android:hint="Waktu"
                android:inputType="number"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvCostDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klik ini untuk Detail Cost!"
            android:textColor="#008DDA"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="25dp"
            />

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan"
            android:layout_gravity="center"
            android:textSize="20dp"
            />

    </LinearLayout>




</LinearLayout>